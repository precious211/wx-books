/**index.wxss**/
.container {
  background: #f2f2f2;
}
.swiper-container .slider-img{
  width: calc(100% / 3);
  height:100%;
} 
.book-list {
  padding:0 20px 10px;
}
.book-list .list-top{
  height: 36px;
  display: flex;
  justify-content: space-between;
  align-items:center;
  font-size: 16px;
  font-weight: bold;
}
.book-list .list-top .tit {
  color: #333;
  max-width: 75%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.book-list .list-top .rate{
  color: #e21e39;
}

.book-list .list-body {
  display:-webkit-flex;
  display: flex;
  padding-bottom:10px;
  border-top: 1px solid #d1d1d1;
  border-bottom:1px solid #d1d1d1;
}

.book-list .list-body .left {
  width: 120px;
  height: 120px;
  margin:10px 20px 0 0;
}
.book-list .list-body .left  .avatar-cover {
  width:100%;
  height:100%;
  border-radius: 3px;
}
.book-list .list-body .right{
  font-size: 14px;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-content: flex-start;
}
.book-list .list-body .right .price{
  color: #e21e39;
  font-weight: bold;
}

